.chat {
  width: 280px
  height: 100%
  background: var(--secondary-bg-color)
  color: var(--ghost-color)
  &-nav {
    display flex
  }
  &-place {
    display: flex
    flex-grow: 2
    overflow auto
  }
}

.chatlist {
  flex-grow: 2
  display: flex
  flex-direction: column
  overflow: auto
  margin: 0
  padding: 0
  list-style-type: none
}
