{
  "compilerOptions": {
    "target": "esNext",
    "module": "es2015",
    "sourceMap": true,
    
    "outDir": "./dist",
    "rootDir": "./src",
    
    "removeComments": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}